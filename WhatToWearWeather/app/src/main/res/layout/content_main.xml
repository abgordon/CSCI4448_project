<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="#ffd905">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/layoutSummary"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading forecast...."
                android:id="@+id/Summary"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:textSize="24sp"
                android:gravity="center_horizontal" />


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/row1"
        android:layout_below="@+id/layoutSummary"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/headView"
            android:background="@drawable/head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Head suggestion"
            android:layout_gravity="center_vertical"
            android:id="@+id/head"
            android:layout_weight="4"
            android:layout_marginLeft="20dp"
            />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/row2"
        android:layout_below="@+id/row1"
        android:layout_marginBottom="10dp"
        >


        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView4"
            android:background="@drawable/shirt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shirt suggestion"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView4"
            android:layout_weight="4"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/row3"
        android:layout_below="@+id/row2"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView3"
            android:background="@drawable/pant"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pant suggestion"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView3"
            android:layout_weight="4"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/row4"
        android:layout_below="@+id/row3"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView2"
            android:background="@drawable/shoe"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoe suggestion"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView2"
            android:layout_weight="4"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/row5"
        android:layout_below="@+id/row4"
        >

        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView"
            android:background="@drawable/accessories"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessory suggestion"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView"
            android:layout_weight="4"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>

